    <style name="TextStyle" parent="Theme.ShopsNotes">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.Primary" parent="TextStyle">
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
        <item name="android:textColor">@color/eggplant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Primary.Small" parent="TextStyle.Primary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Secondary" parent="TextStyle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/eggplant_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Secondary.Small" parent="TextStyle.Secondary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Secondary.Smallest" parent="TextStyle.Secondary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="InputLayout.CustomWidth" parent="InputLayout">
        <item name="android:layout_width">156dp</item>
    </style>

    <style name="InputText" parent="Theme.ShopsNotes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputText.Number" parent="InputText">
        <item name="android:inputType">number</item>
        <item name="android:text">0</item>
    </style>

    <style name="Theme.AndNews.Button" parent="Theme.ShopsNotes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/ic_button_background</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>